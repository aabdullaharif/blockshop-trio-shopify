<div class="looks-section">
  <div class="h-container"> 
    <div class="heading">
      <h2>{{ section.settings.heading }}</h2>
      <p>
        {%- assign blog_linklists = section.settings.blog_linklists -%}
        {% if linklists[blog_linklists].links.size > 0 %}
        {% for link in linklists[blog_linklists].links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
        {% endif %}
      </p>
    </div>
    <div class="col-holder">
      {% for block in section.blocks %}
      {% assign image = block.settings.block_img %}
      <div class="col">
        <a href="{{ block.settings.btn_url }}">
          <div class="img-holder">
            {%
              render "framework--image",
              image: image,
              full_width: true,
              max_height: true            
           %}
          </div>
          <div class="txt-holder">
            <h4>{{ block.settings.title }}</h4>
            <span>{{ block.settings.btn_text }}</span>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Blog Posts",
    "settings": [
      {
        "type":      "text",
        "id":        "heading",
        "label":     "Add Heading",
        "default":   "Add Text"
      },
      {
        "type":      "link_list",
        "id":        "blog_linklists",
        "label":     "Menu Links"
      }
	],
      "blocks": [
      {
        "type": "select",
        "name": "Add More Column",
        "settings": [
          {
            "type":      "image_picker",
            "id":        "block_img",
            "label":     "Add Image"
          },
          {
            "type":      "text",
            "id":        "title",
            "label":     "Add title"
          },
          {
            "type":      "text",
            "id":        "btn_text",
            "label":     "Add Btn Text"
          },
          {
            "type":      "url",
            "id":        "btn_url",
            "label":     "Add Btn Link"
          }
        ]
      }
   ],    
	"presets": [
        {
          "name": "Blog Posts",
          "category": "section"
        }
      ]
  }
{% endschema %}

