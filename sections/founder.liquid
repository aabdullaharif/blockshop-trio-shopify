<style>
  .founder-block {
    padding: 30px 0 0;
    overflow: hidden;
    background: #fff;
  }
  .founder-block p {
    margin: 0 0 20px;
    font: 400 14px/2.167 'Avenir', Arial, sans-serif;
  }
  .founder-block .image-holder {
    overflow: hidden;
    margin: 0 0 20px;
  }
  .founder-block .image-holder img {
    width: 100%;
    display: block;
  }
  .founder-block .text-box {
    padding: 0 15px;
    overflow: hidden;
    margin: 0 0 20px;
  }
  @media (min-width: 991.98px) {
    .founder-block { padding: 50px 0 0; }
    .founder-block .text-box { padding: 0 30px; }
    .founder-block p { font-size: 16px; }
    .founder-block .image-holder { margin: 0 0 50px; }
  }
  @media (min-width: 1199.98px) {
    .founder-block { padding: 70px 0 0; }
    .founder-block .text-box { padding: 0 50px; }
    .iq-heading { margin: 0 0 30px; }
    .founder-block p { font-size: 18px; }
    .founder-block .image-holder { margin: 0 0 70px; }
  }
</style>
<div class="founder-block">
  <div class="vessel-fluid padding-0">
    <div class="queue">
      <div class="column-12 column-md-6">
        <div class="image-holder">
           {%
              render "framework--image",
              image: section.settings.img,
              full_width: true
            %}
        </div>
      </div>
      <div class="column-12 column-md-6">
        <div class="text-box text-center">
          <h2 class="iq-heading">{{ section.settings.title_f }}</h2>
          <p>{{ section.settings.desc_f }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="vessel">
    <div class="queue content-justify-center">
      <div class="column-12 column-md-10">
        <div class="text-box text-center">
          <h2 class="iq-heading">{{ section.settings.title_m }}</h2>
          <p>{{ section.settings.desc_m }}</p>
        </div>
      </div>
    </div>
    <div class="queue content-justify-center">
      <div class="column-12 column-md-10">
        <div class="text-box text-center">
          <h2 class="iq-heading">{{ section.settings.title_p }}</h2>
          <p>{{ section.settings.desc_p }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
"name": "abt-001-founder",
"settings": [
{
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
{
"type": "textarea",
"id": "title_f",
"label": "title_f",
"default": "Our Founder"
},
{
"type": "textarea",
"id": "desc_f",
"label": "desc_f",
"default": "step by step"
},




{
"type": "textarea",
"id": "title_m",
"label": "title_m",
"default": "Our Founder"
},
{
"type": "textarea",
"id": "desc_m",
"label": "Mission",
"default": "step by step"
},



{
"type": "textarea",
"id": "title_p",
"label": "title_m",
"default": "Our Products"
},
{
"type": "textarea",
"id": "desc_p",
"label": "Mission",
"default": "prods"
}

]
}
{% endschema %}
