{
"name": "Collection tabs",
"settings": [
		{
		  "id": "section_title",
	  	  "type": "text",
      	  "label": "Section Title"
		  
		}
],
  "blocks": [
    {
      "type": "select",
      "name": "new collection",
      "settings": [
		{
		  "id": "collection_image",
	  	  "type": "image_picker",
      	  "label": "Collection Image"
		},
		{
		  "id": "collection_title",
	  	  "type": "text",
      	  "label": "Collection Title"
		},
		{
		  "id": "collection",
	  	  "type": "collection",
      	  "label": "Select Collection"
		},
		{
		  "id": "btn_title",
	  	  "type": "text",
      	  "label": "Add button title"
		}

      ]
	},
{
      "type": "custom-card",
      "name": "custom-card",
      "settings": [
		{
"type": "image_picker",
"id": "img",
"label": "image"
}
		

      ]
	}
  ]
}
{% endschema %}

