{% assign product_handle = product.handle %}
{% for block in section.blocks %}
{% if block.settings.product_handle == product_handle %}
<div class="slider-container">
  <div class="queue">
    <div class="block">
      <h2 class="hdd" style="text-transform: capitalize;">Customers Also Viewed</h2>
    </div> 
    <div class="block">
      <div class="search-result-carousel">
        {% for product in collections[block.settings.collection].products %}
        <div class="slide">
          <a href="{{ product.url | within: collection }}">
          <div class="frame">
            <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="image">
          </div>
          <div class="text-info-frame">
            <strong class="title">{{ product.title }}</a></strong>
            <div class="reviews-bar">

            </div>
            {% comment %}
            <p>Waterproof eyebrow pomade to fill and detail brows.</p>
            {% endcomment %}
            <strong class="price">{{ product.price | money }}</strong>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Related Products",
    "settings": [
         ],"blocks": [
       {
          "type": "select",
          "name": "Add Collection",
          "settings": [
              {
              "type": "product",
              "id": "product_handle",
              "label": "Select a product"
              },
              {
              "id": "section_title",
              "type": "text",
              "label": "Section Title"
              },
              {
              "id": "collection",
              "type": "collection",
              "label": "Select Collection"
              }
            ]
	     }
      ]
  }
{% endschema %}

