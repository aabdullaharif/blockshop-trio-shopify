<div class="insta-block">
  <div class="container-fluid">
    {% if section.settings.heading != blank %}
    <div class="queue">
      <div class="col-12 text-center">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    </div>
    {% endif %}
    <div class="queue">
      {% for block in section.blocks %}
      {% assign image = block.settings.instagram_img %}
      {% if block.settings.insta_url != blank or block.settings.instagram_img != blank %}
      <div class="box">
        <a href="{{ block.settings.insta_url }}">
          <div class="image-holder">
            {%
            render "framework--image",
            image: image,
            full_width: true
           %}
          </div>
        </a>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Instagram Section",
    "settings": [
          {
            "type":      "text",
            "id":        "heading",
            "label":     "Instagram Heading"
          }
     ],
      "blocks": [
      {
        "type": "select",
        "name": "Add Product Block",
        "settings": [
          {
            "type":      "image_picker",
            "id":        "instagram_img",
            "label":     "Instagram Image"
          },
          {
            "type":      "url",
            "id":        "insta_url",
            "label":     "Instagram Link"
          }
        ]
      }
   ],    
	"presets": [
        {
          "name": "Instagram Block",
          "category": "section"
        }
      ]
  }
{% endschema %}

