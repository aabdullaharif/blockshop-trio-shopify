<div class="iq-mission-section">
  <div class="h-container">
    <p>{{ section.settings.content }}</p>
  </div>
</div> 

<div class="about-slider">
  <div class="iq-inner-container">
    <div class="swiper-container mySwiper2">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="img-box">
            <img src="{{ block.settings.block_img | img_url: 'master' }}">
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Images Block",
    "settings": [
      {
        "type":      "textarea",
        "id":        "content",
        "label":     "Add Content"
      }
	],
      "blocks": [
      {
        "type": "select",
        "name": "Add More Slides",
        "settings": [
          {
            "type":      "image_picker",
            "id":        "block_img",
            "label":     "Add Slide Image"
          }
        ]
      }
    ]
  }
{% endschema %}

