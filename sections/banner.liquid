<style>
  @media screen and (max-width: 575.98px) {
    .h-banner video#\31 621274108e2ea65bc{transform: scale(1.5);}
  }
</style>




<div class="h-banner">
  <video id="{{section.id}}" autoplay="" preload="true" muted="" loop="" playsinline="" class="slide-video">
    <source src="{{ section.settings.video_url }}">
  </video>
  <div class="caption">
    <div class="h-container">
      <span><b>{{ section.settings.title }}</b></span>
      <h2>{{ section.settings.heading }}</h2>
      <p>
        <b>{{ section.settings.content }}</b>
      </p>
      {% if section.settings.btn_url %}<a href="{{ section.settings.btn_url }}" class="button">{{ section.settings.btn_title }}</a>{% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type":      "url",
        "id":        "video_url",
        "label":     "Background Video-Url"
      },
      {
        "type":      "text",
        "id":        "title",
        "label":     "Add Title",
        "default":   "add text"
      },
      {
        "type":      "text",
        "id":        "heading",
        "label":     "Add Heading",
        "default":   "add text"
      },
      {
        "type":      "textarea",
        "id":        "content",
        "label":     "Add Description",
        "default":   "add text"
      },
      {
        "type":      "text",
        "id":        "btn_title",
        "label":     "Button Text"
      },
      {
        "type":      "url",
        "id":        "btn_url",
        "label":     "Button Url"
      }
	],    
	"presets": [
        {
          "name": "Banner",
          "category": "section"
        }
      ]

  }
{% endschema %}

