<div class="iq-meet-section section-two"> 
  <div class="h-container">
    <div class="head">
      <h2 class="iq-heading">{{ section.settings.title }}</h2>
    </div>
    <div class="holder">
      <div class="text-box " {% if section.settings.img %}{% else %}style="margin:0 auto;"{% endif %}>
        <h3>{{ section.settings.heading }}</h3>
        <div class="sep"></div>
        <p>{{ section.settings.content }}</p> 
        {% if section.settings.btn_link %}
        	<a class="iq-btn" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        {% endif %}
      </div>
      {% if section.settings.img %}
      <div class="img-box">
        <img src="{{ section.settings.img | img_url: 'master' }}">
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Color Match",
    "settings": [
      {
        "type":      "text",
        "id":        "title",
        "label":     "Add Title"
      },
      {
        "type":      "text",
        "id":        "heading",
        "label":     "Add Heading"
      },
      {
        "type":      "textarea",
        "id":        "content",
        "label":     "Add Content"
      },
      {
        "type":      "text",
        "id":        "btn_text",
        "label":     "Add Btn Text"
      },
      {
        "type":      "url",
        "id":        "btn_link",
        "label":     "Add Btn Url"
      },
      {
        "type":      "image_picker",
        "id":        "img",
        "label":     "Column image"
      }
	]
  }
{% endschema %}

